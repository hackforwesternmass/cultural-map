// here we are dynamically generating css based on the rails envrionment 

$site: <%= !ENV['site'].nil? ? ENV['site'] : "default" %> ; 

// default values: 
$menu_primary: #00AEEF; 

@if $site == AMHERST {
  $menu_primary: #436e9b;
}

@if $site == NORTHAMPTON {
  $menu_primary: #5c770e;
}

@if $site == HOLYOKE {
  $menu_primary: #951601;
}


p{
  background-color: $site;
}