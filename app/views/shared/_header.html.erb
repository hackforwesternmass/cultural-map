  <%

    color = "#00AEEF;"
    host = request.host_with_port.downcase
    amherst_color = "#2aace3;"
    northampton_color = "#719b4d;"
    holyoke_color = "#872c2a;"
    site_text = "Western MA"
    logo_file = "culturemap_logo_DEFAULT.png"


    if host.include?("amherst")
      color = amherst_color
      site_text = "Amherst"
      logo_file = "culturemap_logo_AMHERST.png"
    elsif host.include?("holyoke")
      color = holyoke_color
      site_text = "Holyoke"
      logo_file = "culturemap_logo_HOLYOKE.png"
    elsif host.include?("northampton")
      color = northampton_color
      site_text = "Northampton"
      logo_file = "culturemap_logo_NORTHAMPTON.png"
    end

  %>

  <style type="text/css">

    .top-bar, .tab-bar {
       background-color:  <%= color.html_safe %>
       position:fixed !important;
       width:100%;
       z-index:500;
    }
    .top-bar.expanded .title-area { 
       background-color:  <%= color.html_safe %>
    }
    .top-bar-section ul li {
      background-color: #ffffff;
    }
    .top-bar-section ul li:hover {
      background-color: #333;
    }
    .top-bar-section li:not(.has-form) a:not(.button), .top-bar-section ul li:hover:not(.has-form) > a {
      background-color: <%= color.html_safe %>
      opacity: 0.75;
    }  

  </style>

    <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><a href="<%= root_path %>"><img src="/assets/<%= logo_file %>"></a>
        </h1>
      </li>
       <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"> <span>MENU</span> </a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <li><a href="<%= root_path %>">Map Attractions</a></li>
        <li><a href="/#/listView">List Attractions</a></li>
        <% if current_user %>
            <li><%= link_to "Admin", "/api/landmarks" %></li>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
        <% end %>
      </ul>
    </section>
  </nav>
