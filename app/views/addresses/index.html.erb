<div class="row">
  <div class="col-md-12">
    <h1>Addresses</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p>
      <%= link_to 'New Address', new_address_path, class: 'btn btn-default' %>
    </p>

    <table class="table">
      <thead>
        <tr>
          <th>Street Number</th>
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.street_number %></td>
            <td><%= address.street %></td>
            <td><%= address.city %></td>
            <td><%= address.state %></td>
            <td><%= address.latitude %></td>
            <td><%= address.longitude %></td>
            <td><%= link_to 'Show', address, class: 'btn btn-default' %></td>
            <td><%= link_to 'Edit', edit_address_path(address), class: 'btn btn-default' %></td>
            <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
